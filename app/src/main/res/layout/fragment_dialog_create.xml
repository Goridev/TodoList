<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_professional_create"
    android:background="@drawable/bottom_top_rounded"
    tools:context=".views.FragmentDialogCreate">
    <TextView
        android:id="@+id/title_fragment_create"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linear_main_create"
        android:text="@string/text_title_create"
        android:textSize="25sp"
        android:textAlignment="center"
        android:padding="@dimen/dimen_35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/linear_main_create"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_fragment_create">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7.5dp"
            android:layout_marginHorizontal="@dimen/dimen_35dp"
            android:layout_marginBottom="@dimen/dimen_10dp">
            <EditText
                android:id="@+id/edit_main_create_title"
                android:hint="@string/edit_main_create_title_hint"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:background="@drawable/border_textarea"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:padding="7.5dp"
            android:layout_marginHorizontal="@dimen/dimen_35dp">
            <EditText
                android:textSize="@dimen/dimen_15dp"
                android:textIsSelectable="true"
                android:id="@+id/edit_main_create_text"
                android:gravity="top|left"
                android:background="@null"
                android:minLines="8"
                android:maxLines="12"
                android:lines="10"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:hint="@string/edit_main_create_text_hint"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="@dimen/dimen_35dp"
        android:layout_marginHorizontal="@dimen/dimen_50dp"
        android:id="@+id/button_main_create"
        android:text="@string/button_main_create_task"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn" />
</androidx.constraintlayout.widget.ConstraintLayout>