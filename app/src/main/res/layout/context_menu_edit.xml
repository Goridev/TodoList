<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="horizontal"
    android:scrollbarAlwaysDrawHorizontalTrack="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:id="@+id/context_menu_anchor">
        <ImageView
            android:id="@+id/bold"
            android:clickable="true"
            android:src="@drawable/ic_format_bold"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
        <ImageView
            android:id="@+id/italic"
            android:src="@drawable/ic_format_italic"
            android:clickable="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
        <ImageView
            android:id="@+id/underline"
            android:src="@drawable/ic_format_underlined"
            android:clickable="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
        <ImageView
            android:id="@+id/strike"
            android:src="@drawable/ic_format_strikethrough"
            android:clickable="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
        <ImageView
            android:id="@+id/increase_text"
            android:src="@drawable/ic_format_increase"
            android:clickable="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
        <ImageView
            android:id="@+id/decrease_text"
            android:src="@drawable/ic_format_decrease"
            android:clickable="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
        <ImageView
            android:id="@+id/list_bulleted_text"
            android:src="@drawable/ic_format_list_bulleted"
            android:clickable="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
        <ImageView
            android:id="@+id/list_numbered_text"
            android:src="@drawable/ic_format_list_numbered"
            android:clickable="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
        <ImageView
            android:id="@+id/link_text"
            android:src="@drawable/ic_format_link"
            android:clickable="true"
            android:layout_margin="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"/>
    </LinearLayout>
</HorizontalScrollView>