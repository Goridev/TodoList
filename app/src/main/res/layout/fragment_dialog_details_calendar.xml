<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CalendarView
        android:id="@+id/reminder_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_set_calendar"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        app:layout_constraintTop_toBottomOf="@+id/reminder_calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="@dimen/dimen_35dp"
        android:layout_marginHorizontal="@dimen/dimen_25dp"
        android:paddingHorizontal="@dimen/dimen_35dp"
        android:id="@+id/button_set_calendar"
        android:text="@string/button_set_calendar"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gradient_blue" />
</androidx.constraintlayout.widget.ConstraintLayout>